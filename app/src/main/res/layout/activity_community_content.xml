<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CommunityContentActivity"
    android:layout_margin="15dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:text="제목"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/item_detail_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:text="작성자"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/item_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:text="날짜"
        android:textSize="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="#aaaaaa"/>
<!--
    <ImageView
        android:id="@+id/item_detail_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>
-->

    <TextView
        android:id="@+id/item_detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:text="내용"/>

</LinearLayout>